{
  "info": {
    "name": "Pulse API - Internal",
    "description": "Internal Pulse API for order management (service-to-service)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Create Order (Internal)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Auto-save order_id from response",
              "if (pm.response.code === 201) {",
              "    const response = pm.response.json();",
              "    pm.environment.set(\"order_id\", response.order_id);",
              "    console.log(\"Saved order_id:\", response.order_id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"order_unique_key\": \"test-order-{{$timestamp}}\",\n  \"instrument\": \"NSE:TCS\",\n  \"side\": \"BUY\",\n  \"total_quantity\": 200,\n  \"num_splits\": 10,\n  \"duration_minutes\": 120,\n  \"randomize\": true\n}"
        },
        "url": {
          "raw": "{{base_url}}/pulse/internal/orders",
          "host": ["{{base_url}}"],
          "path": ["pulse", "internal", "orders"]
        },
        "description": "Create order directly via Pulse internal API (bypasses GAPI). No authentication required."
      },
      "response": []
    },
    {
      "name": "Get Order by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/pulse/internal/orders/{{order_id}}",
          "host": ["{{base_url}}"],
          "path": ["pulse", "internal", "orders", "{{order_id}}"]
        },
        "description": "Retrieve order details by order ID"
      },
      "response": []
    },
    {
      "name": "Get Order Slices",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/pulse/internal/orders/{{order_id}}/slices",
          "host": ["{{base_url}}"],
          "path": ["pulse", "internal", "orders", "{{order_id}}", "slices"]
        },
        "description": "Get all slices for a specific order"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "order_id",
      "value": "",
      "type": "string"
    }
  ]
}

